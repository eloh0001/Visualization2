{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width":750,
    "height": 500,
    "title": "Beer and spirit consumption in the world",
    "data": {
      "url": "https://raw.githubusercontent.com/eloh0001/Visualization2/main/drinks.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels":[
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
  "transform": [
      {"filter": "datum.Population > Population_Above"},
      {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}
    ],
    "encoding": {
      "x": {
        "field": "Beer_servings",
        "type": "quantitative",
        "title": "Beer servings",
        "axis": {"tickCount": 2},
        "scale": {"type": "log", "domain": [1, 500]}
      },
      "y": {
        "field": "Spirit_servings",
        "type": "quantitative",
        "title": "Spirit servings",
        "axis": {"tickCount": 2},
        "scale": {"type": "log", "domain": [1, 500]}
      }
    },
    "layer": [
      {
        "selection": {
          "continent_highlight": {
            "type": "multi",
            "fields": ["Continent"],
            "bind": "legend"
          }
        },
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {
            "condition": {"selection": "continent_highlight", "value": 0.7},
            "value": 0.2
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Beer_servings", "type": "quantitative", "format": ","},
            {"field": "Spirit_servings", "type": "quantitative", "format": ","},
            {"field": "Total_Litres_of_Pure_Alcohol", "type": "quantitative", "format": ","},
            {"field": "Population", "type": "quantitative", "format": ","}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "grey"},
          "opacity": {
            "condition": {
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Beer_servings", "type": "quantitative", "format": ","},
            {"field": "Spirit_servings", "type": "quantitative", "format": ","},
            {"field": "Total_Litres_of_Pure_Alcohol", "type": "quantitative", "format": ","},
            {"field": "Population", "type": "quantitative", "format": ","}
          ]
        }
      }
    ]
  }