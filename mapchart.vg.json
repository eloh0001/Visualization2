{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total litres of pure alcohol consumed in the world",
    "width": 800,
    "height": 600,
    "projection": {"type": "equirectangular"},
    "data": {
       "url": "https://raw.githubusercontent.com/eloh0001/FIT3179/main/drink.geo.topojson",
       "format": {"type": "topojson", "feature": "drink.geo"}
    },
    "transform": [
    {
       "lookup": "properties.name",
       "from": {
           "data": {
               "url": "https://raw.githubusercontent.com/eloh0001/Visualization2/main/drinks.csv"
           },
           "key": "Country",
           "fields": ["Total Litres of Pure Alcohol"]
           }
       }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
    "color": {
       "field": "Total Litres of Pure Alcohol",
       "type": "quantitative",
       "scale": {
           "type": "threshold",
           "domain": [5, 10, 15,20],
           "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
       }
    },
    "tooltip": [
       {"field": "properties.name", "type": "nominal", "title":    "Country"},
    {"field": "Total Litres of Pure Alcohol", "type": "quantitative"}
    ]
    }
   }